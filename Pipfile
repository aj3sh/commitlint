[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[packages]

[dev-packages]
pre-commit = "*"
pytest = "*"
pytest-cov = "*"

[scripts]
test = "pytest"
coverage = "pytest --cov=src/commitlint --no-cov-on-fail"
coverage-html = "pytest --cov=src/commitlint --cov-report=html --no-cov-on-fail"
install-hooks = "pre-commit install --hook-type pre-commit --hook-type commit-msg"
